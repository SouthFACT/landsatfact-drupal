/**
 * Implements hook_form_alter
 */
function lsf_request_form_alter(&$form, &$form_state, $form_id) {
    if ($form_id === 'custom_request_node_form') {
        $form['#attached']['js'] = array(drupal_get_path('module', 'lsf_request') . '/request_handlers.js');
    }
}

